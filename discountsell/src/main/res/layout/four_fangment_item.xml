<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:background="#e0e0e0"
   >
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:id="@+id/ll_four_item_title"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1">
        <ImageView
            android:id="@+id/iv_four_item_title"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="60dp"
            android:layout_height="35dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:id="@+id/tv_four_item_title"
            android:text="非常特卖"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_weight="0.51" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <LinearLayout
            android:background="#fff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp">
          <RelativeLayout
              android:layout_marginLeft="3dp"
              android:layout_marginRight="3dp"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="match_parent">
              <ImageView
                  android:scaleType="fitXY"
                  android:id="@+id/iv_four_item_left"
                  android:src="@mipmap/ic_launcher"
                  android:layout_width="match_parent"
                  android:layout_height="140dp"
                  android:layout_weight="1"/>

              <LinearLayout
                  android:background="#66000000"
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true"
                  android:id="@+id/linearLayout">
                  <TextView
                      android:id="@+id/tv_four_item_left_prom"
                      android:textColor="#fff"
                      android:gravity="center"
                      android:text="3000"
                      android:layout_weight="6"
                      android:layout_width="0dp"
                      android:layout_height="match_parent" />

                  <TextView
                      android:id="@+id/tv_four_item_left_price"
                      android:textColor="#bfbfbf"
                      android:gravity="center_vertical"
                      android:text="300"
                      android:layout_weight="4"
                      android:layout_width="0dp"
                      android:layout_height="match_parent" />

              </LinearLayout>
          </RelativeLayout>
           <RelativeLayout
               android:layout_marginLeft="3dp"
               android:layout_marginRight="3dp"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent">
               <ImageView
                   android:scaleType="fitXY"
                   android:id="@+id/iv_four_item_center"
                   android:src="@mipmap/ic_launcher"
                   android:layout_width="match_parent"
                   android:layout_height="140dp"
                   android:layout_weight="1"/>
               <LinearLayout

                   android:background="#66000000"
                   android:layout_width="match_parent"
                   android:layout_height="20dp"
                   android:layout_alignParentBottom="true"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true">
                   <TextView
                       android:id="@+id/tv_four_item_center_prom"
                       android:textColor="#fff"
                       android:gravity="center"
                       android:text="30"
                       android:layout_weight="6"
                       android:layout_width="0dp"
                       android:layout_height="match_parent" />

                   <TextView
                       android:id="@+id/tv_four_item_center_price"
                       android:textColor="#bfbfbf"
                       android:gravity="center_vertical"
                       android:text="300"
                       android:layout_weight="4"
                       android:layout_width="0dp"
                       android:layout_height="match_parent" />
               </LinearLayout>

           </RelativeLayout>
           <RelativeLayout
               android:layout_marginLeft="3dp"
               android:layout_marginRight="3dp"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent">
               <ImageView
                   android:scaleType="fitXY"
                   android:id="@+id/iv_four_item_right"
                   android:src="@mipmap/ic_launcher"
                   android:layout_width="match_parent"
                   android:layout_height="142dp"
                   android:layout_weight="1"/>
               <LinearLayout

                   android:background="#66000000"
                   android:layout_width="match_parent"
                   android:layout_height="20dp"
                   android:layout_alignParentBottom="true"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true">
                   <TextView
                       android:id="@+id/tv_four_item_right_prom"
                       android:textColor="#fff"
                       android:gravity="center"
                       android:text="30"
                       android:layout_weight="6"
                       android:layout_width="0dp"
                       android:layout_height="match_parent" />

                   <TextView
                       android:id="@+id/tv_four_item_right_price"
                       android:textColor="#bfbfbf"
                       android:gravity="center_vertical"
                       android:text="300"
                       android:layout_weight="4"
                       android:layout_width="0dp"
                       android:layout_height="match_parent" />
               </LinearLayout>

           </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_four_item_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:id="@+id/tv_four_item_discount"
                android:text="3折起"
                android:background="#ff0000"
                android:textColor="#fff"
                android:layout_width="45dp"
                android:layout_height="26dp" />
        </LinearLayout>
        <TextView
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:text="共15件"
            android:id="@+id/tv_four_item_numble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="10"
            android:gravity="right|center_vertical"
            android:text="活动截止时间："
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ff00"
            android:text="2016-07-22"
            android:id="@+id/tv_four_item_time"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
