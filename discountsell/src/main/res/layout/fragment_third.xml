<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="androidas.com.discountsell.fragment.ThirdFragment">
    <RelativeLayout
        android:id="@+id/rl_title2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#ff0000">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="19.9包邮-全部"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/iv_recommend_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_list_2x" />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_free_post2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title2"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_free_post2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_free_post2"/>
</RelativeLayout>
